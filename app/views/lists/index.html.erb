<div class="container mt-5">
  <h1>My Lists</h1>
  <%= link_to "Add new list", lists_new_path, class: "btn btn-primary mb-3" %>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= list.name %></h5>
            <%= link_to "See list", list_path(list), class: "btn btn-info" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
